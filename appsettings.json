{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.AspNetCore.Authorization": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sms-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sms-api-errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Warning",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MasterDatabase": "Data Source=RANJUS_TUF;Initial Catalog=SMS;Integrated Security=False;User Id=qwe;Password=1234;MultipleActiveResultSets=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Key": "GzFzP7f2gT83KnCTHtJ1Vk3a7q2rjE2F7opqP3kpMj8=",
    "Issuer": "SMS",
    "Audience": "SMS",
    "Subject": "JWTServiceAccessToken"
  },
  "FileSettings": {
    "NicUploadFolderPath": "C:\\inetpub\\wwwroot\\SMS_GUI\\brower\\uploads\\nic"
  },
  "HealthMonitoring": {
    "CacheTimeouts": {
      "SystemHealth": 30,
      "DatabaseHealth": 60,
      "ServicesHealth": 45,
      "BackupHealth": 300,
      "StorageHealth": 120,
      "SystemMetrics": 30,
      "LogsHealth": 60,
      "SecurityHealth": 1800
    },
    "Thresholds": {
      "Storage": {
        "WarningPercentage": 70,
        "CriticalPercentage": 90
      },
      "Metrics": {
        "CpuWarningPercentage": 70,
        "CpuCriticalPercentage": 90,
        "MemoryWarningPercentage": 70,
        "MemoryCriticalPercentage": 90
      },
      "Logs": {
        "ErrorsWarningCount": 5,
        "ErrorsCriticalCount": 10,
        "WarningsNormalCount": 10,
        "WarningsHighCount": 20
      }
    },
    "Services": [
      "auth-service",
      "invoice-service", 
      "customer-service",
      "inventory-service",
      "reports-service"
    ],
    "BackupSettings": {
      "RetentionDays": 30,
      "ScheduledTime": "02:00",
      "Location": "local-storage"
    },
    "BackgroundServices": {
      "EnableDatabaseBackup": true,
      "EnableHealthDataCollection": true,
      "EnableHealthAlerting": true,
      "EnableLogCleanup": true,
      "EnableCertificateMonitoring": true
    }
  }

}
